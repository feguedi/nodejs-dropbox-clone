{
  "env": {
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 10
  },
  "rules": {
    "curly": [2, "multi-line"],
    "no-throw-literal": 1,
    "strict": [1, "never"],
    "semi": [0, "never"],
    "quotes": [1, "single"],
    "no-var": 1,
    "eol-last": 1,
    "no-new-require": 1,
    "no-mixed-requires": [1, false],
    "comma-dangle": 0,
    "new-cap": [
      2,
      {
        "capIsNewExceptions": [
          "Schema"
        ]
      }
    ]
  }
}
